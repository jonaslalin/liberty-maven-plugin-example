<?xml version="1.0" encoding="UTF-8" ?>
<server>
  <featureManager>
    <feature>webProfile-8.0</feature>
    <!-- Arquillian support features -->
    <feature>j2eeManagement-1.1</feature>
    <feature>localConnector-1.0</feature>
    <feature>usr:arquillian-support-1.0</feature>
  </featureManager>
  <httpEndpoint id="defaultHttpEndpoint" httpPort="9080" httpsPort="-1" />
  <webApplication contextRoot="acme" location="${project.artifactId}.war" />
  <!-- Arquillian requirement -->
  <applicationMonitor updateTrigger="mbean" />
</server>
